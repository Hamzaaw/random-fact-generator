<body>
    <div class="container">
        <h1>Random Interesting Fact</h1>
        <p id="fact">Click the button to get a fact!</p>
        <button onclick="getFact()">Get a Fact</button>
    </div>

    <script>
        async function getFact() {
            try {
                const response = await fetch('https://uselessfacts.jsph.pl/random.json?language=en');
                const data = await response.json();
                document.getElementById('fact').innerText = data.text;
            } catch (error) {
                document.getElementById('fact').innerText = "Oops! Couldn't fetch a fact. Try again!";
            }
        }
    </script>
</body>
