    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Interesting Fact</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
            background-color: #1ce783;
            color: #fff;
        }
        .container {
            max-width: 600px;
            margin: auto;
            background: rgba(0, 0, 0, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }
        h1 {
            font-size: 2em;
            margin-bottom: 20px;
        }
        #fact {
            font-size: 1.5em;
            margin: 20px;
            font-weight: bold;
        }
        button {
            padding: 12px 24px;
            font-size: 1.2em;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            background-color: #1ce783;
            color: #000;
            font-weight: bold;
            transition: background 0.3s;
        }
        button:hover {
            background-color: #16c06e;
        }
    </style>
